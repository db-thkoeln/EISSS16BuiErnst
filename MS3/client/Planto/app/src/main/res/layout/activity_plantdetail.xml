<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlantDetailActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PlantName"
        android:textColor="#000000"
        android:id="@+id/plant_detail_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Temperatur(Aktuell): "
        android:textColor="#000000"
        android:layout_below="@+id/plant_detail_name"
        android:id="@+id/textView1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Temperatur(Bedarf): "
        android:textColor="#555555"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView1"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Bodenfeuchtigkeit(Aktuell): "
        android:textColor="#000000"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Bodenfeuchtigkeit(Bedarf): "
        android:textColor="#555555"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Lichtstärke(Aktuell): "
        android:textColor="#000000"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Lichtstärke(Obergrenze): "
        android:textColor="#555555"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Wachstumsphase: "
        android:textColor="#000000"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:text="Station: "
        android:textColor="#000000"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        />

</RelativeLayout>